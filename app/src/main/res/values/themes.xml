<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SteamLoginClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- EditText Global Style -->
        <item name="editTextStyle">@style/EditTextDefault</item>

        <!-- Select Handle Pointer Color -->
        <item name="colorControlActivated">@color/white</item>

        <!-- Snackbar Global Style -->
        <item name="snackbarStyle">@style/SnackBarDefault</item>
    </style>

    <!-- EditText Global Style -->
    <style name="EditTextDefault" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Snackbar Global Style -->
    <style name="SnackBarDefault" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>